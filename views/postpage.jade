doctype html
html
  head
    title #{title} - My Blog
    link(rel='stylesheet', href='/stylesheets/style.css')
  body

    header
      h1 Submit a Post
    div
      form(name="add-estimation", method="post")
        div.input
            span.label Title
            br
            input(type="text", name="title")
        br
        div.input
            span.label Content
            br
            textarea(name="content", cols="40", rows="5")
        br
        div.input
            span.label Image Link
            br
            textarea(type="text" name="img", cols="40")
        div.actions
            input(type="submit", value="Post")
    footer
      p Ian Trapp 2015 - GitHub - IanDTrapp
